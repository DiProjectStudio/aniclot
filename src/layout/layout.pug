doctype html
html(lang="ru")

    block title

    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")

        title= title || 'Страница'

        // Fonts::Start
        include ../includes/_fonts
        // Fonts::End

        script(data-skip-moving="true").
            const home_dir = './';
        script(type="module", src="/src/scripts/main.js")

        link(rel="stylesheet", href="/src/styles/plugins.scss")
        link(rel="stylesheet", href="/src/styles/style.scss")

        // Yandex Map
        if yandexMap == true
            script(data-skip-moving="true" src="https://api-maps.yandex.ru/2.1/?lang=ru_RU")

        include ../includes/_favicon

    include ../includes/_mixins

    body(class= page ? page : '')

        #page

            // Header::Start
            block header
                include ../includes/_header
            // Header::End

            // Main::Start
            main
                block main
            // Main::End

            // Footer::Start
            block footer
                include ../includes/_footer
            // Footer::End

        // Popup::Start
        block footer
            include ../components/_popup
        // Popup::End