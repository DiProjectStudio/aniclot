mixin breadcrumbs(title, ...items)

    .breadcrumbs

        .breadcrumbs-wrapper

            .breadcrumbs-item
                a(href='/') Главная

            each item in items

                if item == items[items.length - 1]
                    span.breadcrumbs-separator
                        svg(xmlns="http://www.w3.org/2000/svg" width="16" height="17" viewBox="0 0 16 17" fill="none")
                            path(d="M6 3.83341L10.6667 8.50008L6 13.1667" stroke="#666666" stroke-width="2" stroke-linecap="round" stroke-linejoin="round")
                    .breadcrumbs-item
                        span= item

                else
                    span.breadcrumbs-separator
                        svg(xmlns="http://www.w3.org/2000/svg" width="16" height="17" viewBox="0 0 16 17" fill="none")
                            path(d="M6 3.83341L10.6667 8.50008L6 13.1667" stroke="#666666" stroke-width="2" stroke-linecap="round" stroke-linejoin="round")
                    .breadcrumbs-item
                        a(href="#")= item

    if title
        h1.title= title