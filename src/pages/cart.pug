extends /layout/layout

block title
    - var title = 'Корзина'
    - var page = 'page-cart'

block main

    include ../components/_breadcrumbs
    +breadcrumbs('Корзина', 'Корзина')

    section.section-cart

        .container

            .cart
                
                .cart-main
                    .cart-top
                        .cart-count Товары в корзине: 10 шт
                        .clear-btn Очистить корзину

                    .cart__item
                        .cart__trash
                            .trash
                                svg(xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none")
                                    path(d="M19 7L18.1327 19.1425C18.0579 20.1891 17.187 21 16.1378 21H7.86224C6.81296 21 5.94208 20.1891 5.86732 19.1425L5 7M10 11V17M14 11V17M15 7V4C15 3.44772 14.5523 3 14 3H10C9.44772 3 9 3.44772 9 4V7M4 7H20" stroke="#231F20" stroke-linecap="round" stroke-linejoin="round")

                        .cart__item-img
                            a(href="/product") 
                                +img('item-3.png')

                        .cart__item-wrap
                            .cart__item-title
                                a(href="/product") Футболка аниме клинок рассекающий демонов, чёрный цвет, 46 размер, 100% хлопок, ещё какая‑то информация для длинного названия
                            .cart__price
                                .cart__item-label Цена
                                .cart__item-value 10 000 ₽
                                    span 20 000 ₽
                            .cart__quantity
                                .cart__item-label Кол-во
                                .qty-input
                                    .qty.qty-plus
                                    input(type="text" name="qty" value="10" number-only)
                                    .qty.qty-minus
                            .cart__sum
                                .cart__item-label Сумма
                                .cart__item-value 100 000 ₽
                                    span 2100 000 ₽
                            
                    .cart__item
                        .cart__trash
                            .trash
                                svg(xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none")
                                    path(d="M19 7L18.1327 19.1425C18.0579 20.1891 17.187 21 16.1378 21H7.86224C6.81296 21 5.94208 20.1891 5.86732 19.1425L5 7M10 11V17M14 11V17M15 7V4C15 3.44772 14.5523 3 14 3H10C9.44772 3 9 3.44772 9 4V7M4 7H20" stroke="#231F20" stroke-linecap="round" stroke-linejoin="round")

                        .cart__item-img
                            a(href="/product") 
                                +img('item-4.png')
                        
                        .cart__item-wrap
                            .cart__item-title
                                a(href="/product") Футболка Магическая битва
                            .cart__price
                                .cart__item-label Цена
                                .cart__item-value 10 000 ₽
                                    span 20 000 ₽
                            .cart__quantity
                                .cart__item-label Кол-во
                                .qty-input
                                    .qty.qty-plus
                                    input(type="text" name="qty" value="10" number-only)
                                    .qty.qty-minus
                            .cart__sum
                                .cart__item-label Сумма
                                .cart__item-value 100 000 ₽
                                    span 2100 000 ₽
                            
                .cart-total

                    .total-props.total-sum
                        .total-props__name Итого
                        .total-props__value 100 000 ₽

                    .total-props
                        .total-props__name Кол-во товаров
                        .total-props__value 2

                    .total-props
                        .total-props__name Общая скидка
                        .total-props__value 100 000 ₽
                    
                    .total-props
                        .total-props__name Начислены баллы
                        .total-props__value + 250

                    .total-action
                        .btn.btn--black Перейти к оформлению
                        .btn.btn--border-black Продолжить покупки

                    .register-sale
                        include ../icons/flame.svg

                        p Скидка 20% на первый заказ после регистрации

                        .btn.btn-arrow-right.btn--gray(data-src="#popup-auth" data-fancybox) Зарегистрироваться
                            include ../icons/arrow-right.svg