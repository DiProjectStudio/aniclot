    style.
        body {
            padding: 50px;
            background: #333;
            color: #fff;
        }

        .header,.footer {
            display: none;
        }

        div {
            display: flex;
            align-items: center;
            justify-content: space-between;
            column-gap: 25px;
        }

        code {
            color: yellow;
        }

        h2 {
            margin-bottom: 20px;
        }

        a:hover {
            color: red;
        }

        ul li {
            line-height: 250%;
        }

