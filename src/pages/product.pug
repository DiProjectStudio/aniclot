                        .swiper

                            .swiper-wrapper

                                .product__slide.swiper-slide
                                    div
                                        +img('item-3.png')
                                .product__slide.swiper-slide
                                    div
                                        +img('item-2.png')
                                .product__slide.swiper-slide
                                    div
                                        +img('item-1.png')
                                .product__slide.swiper-slide
                                    div
                                        +img('item-4.png')
                                .product__slide.swiper-slide
                                    div
                                        +img('item-3.png')
                                .product__slide.swiper-slide
                                    div
                                        +img('item-2.png')

                        .swiper-pagination

                    .product-thumbs
                        
                        .swiper

                            .swiper-wrapper

                                .product__nav.swiper-slide
                                    div
                                        +img('item-3.png')
                                .product__nav.swiper-slide
                                    div
                                        +img('item-2.png')
                                .product__nav.swiper-slide
                                    div
                                        +img('item-1.png')
                                .product__nav.swiper-slide
                                    div
                                        +img('item-4.png')
                                .product__nav.swiper-slide
                                    div
                                        +img('item-3.png')
                                .product__nav.swiper-slide
                                    div
                                        +img('item-2.png')

                .product-info

                    h1.title Футболка аниме клинок рассекающий демонов, чёрный цвет, 46 размер, 100% хлопок
                    
                    .product-info__desc
                        p Состав материала: 70% хлопок, 25% полиэстер, 5% лайкра
                        p Коллекция: Клинок рассекающий демонов
                        p Российский размер: 56
                        p Размер производителя: XL
                    
                    .product-info__color
                        .product-info__title Цвет
                        .bricks
                            .brick-item.selected(style="background-color: #333333" title="Черный")
                            .brick-item(style="background-color: #ffffff" title="Белый")
                            .brick-item(style="background-color: #F1F4F5" title="Слоновая кость")
                            .brick-item(style="background-color: #D81823" title="Красный")
                            .brick-item(style="background-color: #F2994A" title="Оранжевый")
                            .brick-item(style="background-color: #219653" title="Зеленый")
                            .brick-item(style="background-color: #2F80ED" title="Синий")
                            .brick-item(style="background-color: #9B51E0" title="Фиолетовый")
                            .brick-item(style="background-color: #6FCF97" title="Светло-зеленый")
                            .brick-item(style="background-color: #56CCF2" title="Голубой")
                    
                    .product-info__size
                        .product-info__title Размер
                        .bricks
                            .brick-item XS
                            .brick-item S
                            .brick-item.selected M
                            .brick-item L
                            .brick-item XL
                            .brick-item XXL

                        .product-info__table Таблица размеров

                    .product-info__price 10 000 ₽
                        .old-price 20 000 ₽
                        .bonus + 200 Баллов

                    .product-info__action
                        .qty-input
                            .qty.qty-plus
                            input(type="text" value="1" number-only)
                            .qty.qty-minus

                        .product-info__cart.btn.btn--black В корзину
                        .product-info__order.btn.btn--border-black Купить в 1 клик

                    .register-sale
                        include ../icons/flame.svg

                        p Скидка 20% на первый заказ после регистрации

                        .btn.btn-arrow-right.btn--gray(data-src="#popup-auth" data-fancybox) Зарегистрироваться
                            include ../icons/arrow-right.svg

    section.section-slider

        .container

            .section-title Похожие товары

        .slider

            .swiper

                .swiper-wrapper

                    .swiper-slide
                        +product('item-1.png', 'клинок рассекающий демонов', 'Футболка аниме клинок рассекающий демонов, чёрный цвет, 46 размер, 100% хлопок')
                    .swiper-slide
                        +product('item-2.png', 'Магическая битва', 'Футболка Магическая битва')
                    .swiper-slide
                        +product('item-3.png', 'клинок рассекающий демонов', 'Футболка аниме клинок рассекающий демонов, чёрный цвет, 46 размер, 100% хлопок')
                    .swiper-slide
                        +product('item-4.png', 'Магическая битва', 'Футболка Магическая битва')
                    .swiper-slide
                        +product('item-1.png', 'клинок рассекающий демонов', 'Футболка аниме клинок рассекающий демонов, чёрный цвет, 46 размер, 100% хлопок')
                    .swiper-slide
                        +product('item-2.png', 'Магическая битва', 'Футболка Магическая битва')

            .swiper-pagination

            .swiper-navigation
                .btn.btn--gray.btn-arrow.swiper-btn-next
                    include ../icons/arrow-right.svg
                .btn.btn--gray.btn-arrow.swiper-btn-prev
                    include ../icons/arrow-right.svg